{% extends 'base.html.twig' %}

{% block title %}Utilisateur index
{% endblock %}

{% block body %}
	<div class="container" style="max-width: 80rem;">

		<h1 class="mt-3">Liste des utilisateurs</h1>

		<table class="table table-hover">
			<thead>
				<tr class="table-primary">
					<th scope="col">Id</th>
					<th scope="col">Email</th>
					<th scope="col">Roles</th>
					<th scope="col">Nom</th>
					<th scope="col">Prenom</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for utilisateur in utilisateurs %}
					<tr class="table-dark">
						<th scope="row">{{ utilisateur.id }}</th>
						<td>{{ utilisateur.email }}</td>
						<td>{{ utilisateur.roles ? utilisateur.roles|json_encode : '' }}</td>
						<td>{{ utilisateur.nom }}</td>
						<td>{{ utilisateur.prenom }}</td>
						<td>
							<a class="btn btn-primary btn-sm me-2" href="{{ path('app_utilisateur_show', {'id': utilisateur.id}) }}">Afficher</a>
							<a class="btn btn-primary btn-sm me-2" href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}">Editer</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">Aucun utilisateur enregistrÃ©</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<a class="btn btn-primary me-2" href="{{ path('app_utilisateur_new') }}">Ajouter un utilisateur</a>
	</div>
{% endblock %}
