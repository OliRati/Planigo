{% extends 'base.html.twig' %}

{% block title %}Reservation index
{% endblock %}

{% block body %}
	<div class="container" style="max-width: 80rem;">

		<h1 class="my-3">Liste des réservations</h1>

		<table class="table table-hover">
			<thead>
				<tr class="table-primary">
					<th scope="col">Id</th>
					<th scope="col">Nom du client</th>
					<th scope="col">Service</th>
					<th scope="col">Date</th>
					<th scope="col">Plage horaire</th>
					<th scope="col">Création</th>
					<th scope="col">actions</th>
				</tr>
			</thead>
			<tbody>
				{% for reservation in reservations %}
					<tr class="table-dark">
						<th scope="row">{{ reservation.id }}</th>
						<td>{{ reservation.customerName }}</td>
						<td>{{ reservation.service.nom }}</td>
						<td>{{ reservation.startAt|date('d-m-Y') }}</td>
						<td>
							{{ reservation.startAt|date('H:i') }}
							-
							{{ reservation.endAt|date('H:i') }}
						</td>
						<td>{{ reservation.createdAt ? reservation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>
							<a class="btn btn-primary btn-sm me-2" href="{{ path('app_reservation_show', {'id': reservation.id}) }}">Afficher</a>
							<a class="btn btn-primary btn-sm me-2" href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">Editer</a>
							{% include "reservation/_delete_form_sm.html.twig" %}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">Aucune réservation</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a class="btn btn-primary" href="{{ path('app_reservation_new') }}">Ajouter réservation</a>

	</div>
{% endblock %}
