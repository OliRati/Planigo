{% extends 'base.html.twig' %}

{% block title %}Reservation
{% endblock %}

{% block body %}
	<div class="container" style="max-width: 80rem;">

		<h1 class="mt-3">Visualiser la réservation</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ reservation.id }}</td>
				</tr>
				<tr>
					<th>Nom du client</th>
					<td>{{ reservation.customerName }}</td>
				</tr>
				<tr>
					<th>Service</th>
					<td>{{ reservation.service.nom }}</td>
				</tr>
				<tr>
					<th>Début réservation</th>
					<td>{{ reservation.startAt ? reservation.startAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Fin réservation</th>
					<td>{{ reservation.endAt ? reservation.endAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Création</th>
					<td>{{ reservation.createdAt ? reservation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>

		{% if is_granted('ROLE_ADMIN') %}
			<a class="btn btn-primary my-3" href="{{ path('app_reservation_index') }}">Retour à la liste</a>
		{% else %}
			<a class="btn btn-primary my-3" href="{{ path('app_planning') }}">Retour à la liste</a>
		{% endif %}

		<a class="btn btn-secondary my-3" href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">Modifier</a>

		{{ include('reservation/_delete_form.html.twig') }}
	</div>
{% endblock %}
