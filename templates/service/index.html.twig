{% extends 'base.html.twig' %}

{% block title %}Service index
{% endblock %}

{% block body %}
	<div class="container" style="max-width: 80rem;">

		<h1 class="mt-3">Liste des service</h1>

		<table class="table table-hover">
			<thead>
				<tr class="table-primary">
					<th scope="col">Id</th>
					<th scope="col">Nom</th>
					<th scope="col">Description</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for service in services %}
					<tr class="table-dark">
						<th scope="row">{{ service.id }}</td>
						<td>{{ service.nom }}</td>
						<td>{{ service.description }}</td>
						<td>
							<a class="btn btn-primary btn-sm me-2" href="{{ path('app_service_show', {'id': service.id}) }}">Voir</a>
							<a class="btn btn-primary btn-sm me-2" href="{{ path('app_service_edit', {'id': service.id}) }}">Modifier</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">Aucun service est enregistr√©</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a class="btn btn-primary me-2" href="{{ path('app_service_new') }}">Ajouter un service</a>
	</div>
{% endblock %}
