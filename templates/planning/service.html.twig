{% extends 'base.html.twig' %}

{% block title %}Planigo planning
{% endblock %}

{% block body %}
	<div class="container" style="max-width: 80rem;">

		<h1 class="mt-3">Planning journalier du
			{{ date|date('d-m-Y') }}
		</h1>

		<div class="card border-primary mb-3">
			<div class="card-header">
				<h4 class="card-title">{{ service.nom }}</h4>
			</div>
			<div class="card-body">
				<p class="card-text">{{ service.description }}</p>
			</div>
		</div>

		<table class="table table-hover">
			<thead>
				<tr class="table-primary">
					<th scope="col">Id</th>
					<th scope="col">Nom du client</th>
					<th scope="col">Date</th>
					<th scope="col">Heures</th>
				</tr>
			</thead>
			<tbody>
				{% for reservation in reservations %}
					<tr class="table-dark">
						<th scope="row">{{ reservation.id }}</th>
						<td>{{ reservation.customerName }}</td>
						<td>{{ reservation.startAt|date('d-m-Y') }}</td>
						<td>{{ reservation.startAt|date('H:i') }}
							-
							{{ reservation.endAt|date('H:i') }}</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">Aucune réservation</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<h2>Plages horaires disponibles</h2>
		<table class="table table-hover">
			<thead>
				<tr class="table-primary">
					<th>Plage disponible</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				{% for freetab in freetabs %}
					<tr class="table-dark">
						<th scope="row">{{ freetab.start }}
							-
							{{ freetab.end }}</th>
						<td>
							{% if is_granted("ROLE_USER") %}
								<a class="btn btn-primary -btn-sm" href="#">Reserver dans ce créneau</a>
								{% else %}
								<a class="btn btn-primary -btn-sm" href="{{ path('app_login') }}">Connectez-vous pour réserver</a>
							{% endif %}
						</td>
					</tr>

					<p></p>
				{% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}
