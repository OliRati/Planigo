{% extends 'base.html.twig' %}

{% block title %}Planigo planning
{% endblock %}

{% block body %}
	<div class="container" style="max-width: 80rem;">

		<h1>Planning journalier</h1>
		<h2>{{ service.nom }}
			du
			{{ date|date('d-m-Y') }}</h2>
		<p class="lead">{{ service.description }}</p>

		<table class="table table-hover">
			<thead>
				<tr class="table-primary">
					<th scope="col">Id</th>
					<th scope="col">Nom du client</th>
                    <th scope="col">Date</th>
					<th scope="col">Heures</th>
				</tr>
			</thead>
			<tbody>
				{% for reservation in reservations %}
					<tr class="table-dark">
						<th scope="row">{{ reservation.id }}</th>
						<td>{{ reservation.customerName }}</td>
                        <td>{{ reservation.startAt|date('d-m-Y') }}
						<td>{{ reservation.startAt|date('H:i') }}
						- {{ reservation.endAt|date('H:i') }}</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">Aucune réservation</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<h2>Plages horaires disponibles</h2>
		<table class="table table-hover">
			<thead>
				<tr class="table-primary">
					<th>Plage disponible</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				{% for freetab in freetabs %}
					<tr class="table-dark">
						<th scope="row">{{ freetab.start }}
							-
							{{ freetab.end }}</th>
						<td><a class="btn btn-primary -btn-sm" href="#">Reserver dans ce créneau</a></td>
					</tr>

					<p></p>
				{% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}
