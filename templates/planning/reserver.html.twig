{% extends 'base.html.twig' %}

{% block title %}Planigo planning
{% endblock %}

{% block body %}
	<div class="container" style="max-width: 80rem;">

		<h1 class="mt-3">Réservation pour le
			{{ date|date('d-m-Y') }}
		</h1>

		{% include 'planning/_service.html.twig' %}

		<h1 class="mt-3">Quel heure de début souhaitez-vous ?</h1>

		<form>
			<label for="debut">Heure de début</label>
			<select class="form-select" id="debut" name="start_hour">
				{% for hour in hours %}
					<option>{{ hour }}</option>
				{% endfor %}
			</select>
			<button class="btn btn-primary my-3" type="submit">Valider</button>
		</form>
	</div>
{% endblock %}
