{% extends 'base.html.twig' %}

{% block title %}Planigo planning
{% endblock %}

{% block body %}
	<div class="container" style="max-width: 80rem;">

		<h1 class="mt-3">Réservation pour le
			{{ date|date('d-m-Y') }}
		</h1>

		{% include 'planning/_service.html.twig' %}

		<div class="mt-3">
			<label class="form-label mt-4" for="inputValid">Heure de début</label>
			<input type="text" value="{{ startHour }}" class="form-control is-valid" id="inputValid" disabled>
		</div>

		<h1 class="mt-3">Choisissez une heure de fin</h1>
		<form>
			<label for="debut">Heure de fin</label>
			<input type="hidden" name="start_hour" value="{{ startHour }}">
			<select class="form-select" id="debut" name="end_hour">
				{% for hour in hours %}
					<option>{{ hour }}</option>
				{% endfor %}
			</select>
			<button class="btn btn-primary my-3" type="submit">Valider</button>
		</form>
	</div>
{% endblock %}
