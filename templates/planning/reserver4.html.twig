{% extends 'base.html.twig' %}

{% block title %}Planigo planning
{% endblock %}

{% block body %}
	<div class="container" style="max-width: 80rem;">

		<h1 class="mt-3">Réservation pour le
			{{ date|date('d-m-Y') }}
		</h1>

		{% include 'planning/_service.html.twig' %}

		<h1>Votre réservation ne peut pas être honorée :</h1>
		<h3 class="text-warning">{{ error }}</h3>
		<div class="mt-3">
			<label class="form-label mt-4" for="inputValid">Heure de début</label>
			<input type="text" value="{{ startHour }}" class="form-control is-valid" id="inputValid" disabled="">
		</div>

		<div class="mt-3">
			<label class="form-label mt-4" for="inputValid">Heure de fin</label>
			<input type="text" value="{{ endHour }}" class="form-control is-valid" id="inputValid" disabled="">
		</div>

		<a class="btn btn-primary my-3" href="{{ path('app_home') }}">Retour a l'acceuil</a>
	</div>
{% endblock %}
